{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./lib/esm",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "webworker"],
    "module": "ESNext",
    "skipLibCheck": true,

    // emit ts type declarations
    "declaration": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/lib"
  ]
}